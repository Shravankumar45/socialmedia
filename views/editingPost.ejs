<div class="container" style="color:white;">
    <h1>Edit Post</h1>
    <form method="POST" action="/editingPost/<%=post._id%>?_method=PUT">
            <div class="form-group">
              <label for="title">Title</label>
              <input type="text" name="title" class="form-control"  placeholder="Add Title" value="<%=post.title%>">
            </div>
            <div class="form-group">
              <label for="body">Body</label>
              <textarea type="text" name="body" class="form-control"  placeholder="Type Something....."><%=post.body%></textarea>
            </div>
            <div class="form-group">
                <lable for="status">Status</lable>
                <select name="status">
                    <option value="public">Public</option>
                    <option value="private">Private</option>
                </select>
            </div>
            <div class="form-group form-check">
              <input type="checkbox" name="allowComments" class="form-check-input" id="checkbox" >
              <label class="form-check-label" for="checkbox">Allow comment</label>
            </div>
            <button type="submit" class="btn btn-primary">SAVE</button>
    </form>
</div>